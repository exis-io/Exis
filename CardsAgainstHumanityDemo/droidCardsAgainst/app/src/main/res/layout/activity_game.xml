<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".GameActivity"
    android:background="#000"
    android:keepScreenOn="true"
    android:id="@+id/game_bg"
    android:animateLayoutChanges="true">

    <TextView android:text="@string/question"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:minHeight="100sp" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/progress"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:background="#00a2ff"
        android:textAlignment="center"
        android:foregroundGravity="left"
        android:progressBackgroundTint="#ff000000"
        android:layout_marginBottom="3dp"
        android:progressDrawable="@drawable/progress_drawable" />

    <TextView
        android:text="@string/answer"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/card_height"
        android:id="@+id/card1"
        android:textSize="20sp"
        android:background="#eee"
        android:textColor="#555"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/progress"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="invisible" />

    <TextView
        android:text="@string/answer"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/card_height"
        android:id="@+id/card2"
        android:textSize="20sp"
        android:background="#eee"
        android:textColor="#555"
        android:layout_below="@+id/card1"
        android:layout_marginTop="@dimen/card_spacing"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="invisible" />

    <TextView
        android:text="@string/answer"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/card_height"
        android:id="@+id/card3"
        android:textSize="20sp"
        android:background="#eee"
        android:textColor="#555"
        android:layout_below="@+id/card2"
        android:layout_marginTop="@dimen/card_spacing"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="invisible" />

    <TextView
        android:text="@string/answer"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/card_height"
        android:id="@+id/card4"
        android:textSize="20sp"
        android:background="#eee"
        android:textColor="#555"
        android:layout_below="@+id/card3"
        android:layout_marginTop="@dimen/card_spacing"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="invisible" />

    <TextView
        android:text="@string/answer"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/card_height"
        android:id="@+id/card5"
        android:textSize="20sp"
        android:background="#fff"
        android:textColor="#555"
        android:layout_below="@+id/card4"
        android:layout_marginTop="@dimen/card_spacing"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="invisible" />

    <TextView
        android:text="@string/room"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="gravity"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:baselineAligned="false"
        android:layout_below="@+id/card5" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/czar_alert"
        android:id="@+id/czarAlert"
        android:layout_alignTop="@+id/player_infos"
        android:layout_alignBottom="@+id/player_infos"
        android:background="#551A8B"
        android:translationZ="2dp"
        android:visibility="invisible"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp" />

    <TableLayout
        android:id="@+id/player_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_weight="1"
                android:id="@+id/player_info0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="player1"
                android:textSize="15sp"
                android:layout_margin="2dp"
                android:textAlignment="gravity"
                android:gravity="center_horizontal"
                android:background="#00a2ff"
                android:textColor="#ffffff"
                android:padding="3dp" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/player_info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="player2"
                android:textSize="15sp"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                android:textAlignment="gravity"
                android:background="#00a2ff"
                android:textColor="#ffffff"
                android:padding="3dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_weight="1"
                android:id="@+id/player_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="player3"
                android:textSize="15sp"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                android:textAlignment="gravity"
                android:background="#00a2ff"
                android:textColor="#ffffff"
                android:padding="3dp"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/player_info3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="player4"
                android:textSize="15sp"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                android:textAlignment="gravity"
                android:background="#00a2ff"
                android:textColor="#ffffff"
                android:padding="3dp"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
